[Unit]
Description=Sonarr
Documentation=https://sonarr.tv/
After=kodi.service tools.mono.service
Requires=tools.mono.service
Wants=kodi.service

[Service]
ExecStart=/bin/sh /storage/.kodi/addons/service.sonarr/bin/sonarr.start
Restart=always
MemoryHigh=100M
MemoryMax=125M

[Install]
WantedBy=kodi.service
