#!/bin/sh

. /etc/profile
oe_setup_addon service.jackett

chmod +x "$ADDON_DIR/jackett/jackett"

XDG_CONFIG_HOME="$ADDON_HOME" cert-sync --quiet --user /etc/pki/tls/cacert.pem

DOTNET_SYSTEM_GLOBALIZATION_INVARIANT="1" \
LD_LIBRARY_PATH="/storage/.kodi/addons/tools.dotnet-runtime/libs:$LD_LIBRARY_PATH" \
XDG_CONFIG_HOME="$ADDON_HOME" \
nice -n "$jk_nice" \
"$ADDON_DIR/jackett/jackett" --NoRestart
