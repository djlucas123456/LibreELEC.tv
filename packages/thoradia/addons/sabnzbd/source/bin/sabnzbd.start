#!/bin/sh

. /etc/profile
oe_setup_addon service.sabnzbd

if [ -z "$sa_nice" ]; then
  sa_nice="0"
fi

for p in "$ADDON_DIR"/SABnzbd/*.egg; do
  _pythonpath="$_pythonpath:$p"
done

PYTHONPATH="$_pythonpath" \
nice -n "$sa_nice" \
python "$ADDON_DIR/SABnzbd/SABnzbd.pyo" \
       --config-file "$ADDON_HOME/" \
       --server "$sabnzbd_server"
