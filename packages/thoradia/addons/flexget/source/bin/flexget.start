#!/bin/sh
. /etc/profile
oe_setup_addon service.flexget

if [ ! -f "${ADDON_HOME}/config.yml" ]; then
  cp "${ADDON_DIR}/config/config.yml" "${ADDON_HOME}"
fi

PYTHONPATH="${ADDON_DIR}/libs:${PYTHONPATH}" \
nice -n "${fg_nice}" \
python "${ADDON_DIR}/libs/bin/flexget" -c "${ADDON_HOME}/config.yml" "${@}"
